<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1D5BD"
    android:padding="20dp"
    tools:context=".ui.CreateAccount">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="308dp"
            android:layout_height="56dp">

            <ImageButton
                android:id="@+id/imageButton49"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:text="Delete"
                app:srcCompat="@drawable/bg_gradient" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:gravity="center"
                android:text="something"
                android:textColor="@android:color/white" />
            <!--            android:background-image: linear-gradient(hsl(0 0% 100% / 0.85), transparent 10px), linear-gradient(hsl(0 0% 100% / 0.25) 10px, transparent 10px)-->
            <!--            <?xml version="1.0" encoding="utf-8"?>-->
            <!--                <LinearLayoutxmlns:android="http://schemas.android.com/apk/res/android"-->
            <!--                android:orientation="vertical"-->
            <!--                android:layout_width="fill_parent"-->
            <!--                android:layout_height="fill_parent"-->
            <!--                android:background="@drawable/bg_gradient "-->
            <!--                >-->
            <!--            </LinearLayout>-->
        </FrameLayout>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBackClicked"
            android:text="Back" />

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginVertical="30dp"
            android:src="@drawable/parliament" />


        <TextView
            android:id="@+id/TextViewCreateAccount"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Please enter your username and password"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/badcreds_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FF1744"
            android:visibility="gone"
            android:text="" />

        <EditText
            android:id="@+id/username_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="username"
            android:inputType="text"
            android:text="@string/username_input" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:text="@string/password_input" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newAccountType_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/newAccountType_input" />

            <Switch
                android:id="@+id/accountTypeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:checked="true"
                android:gravity="center"
                android:showText="false" />
        </LinearLayout>

        <Button
            android:id="@+id/createUserAccount_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onCreateUserAccount"
            android:text="Create Account" />

    </LinearLayout>
</RelativeLayout>