<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/returnToLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5CAF954C"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/mirrors_edge_logo_transparent2" />

        <TextView
            android:id="@+id/TextView3"
            android:layout_width="213dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="Welcome Organizer"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/mirrors_edge_logo_transparent2" />

    </LinearLayout>

    <TextView
        android:id="@+id/manageEventCategories2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                       Your Events:"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        app:srcCompat="@drawable/localloop_sparkler_transparent" />

    <TextView
        android:id="@+id/ManageEventCategories2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add/Edit Event Categories"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/aqua_blue_name_transparent" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/aqua_blue_description_transparent" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/aqua_blue_category_transparent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="121dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="241dp"
                android:layout_height="61dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/aqua_blue_fee_transparent" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:cropToPadding="false"
                app:srcCompat="@drawable/aqua_blue_date_transparent" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/aqua_blue_time_transparent" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/welcome_message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                  Delete Events"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/aqua_blue_view_events_transparent" />

    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:onClick="ReturnToLogin"
        android:text="Back"
        app:icon="@drawable/aqua_blue_delete_transparent" />
</LinearLayout>